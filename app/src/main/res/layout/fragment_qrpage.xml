<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <TextView
        android:id="@+id/QR_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="QR Code"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/QRImageView"
        android:layout_width="220dp"
        android:layout_height="221dp"
        android:layout_marginBottom="452dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QR_header"
        app:layout_constraintVertical_bias="0.933"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />


    <TextView
        android:id="@+id/qr_code_name"
        android:layout_width="393dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="QRcodeName"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/QRImageView"
        app:layout_constraintVertical_bias="0.344"
        android:textColor="#FF426F"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="393dp"
        android:layout_height="32dp"
        android:layout_marginBottom="376dp"
        android:gravity="center"
        android:text="###"
        android:textColor="@color/yellow"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/other_players_button"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:background="@drawable/big_rounded_button"
        android:backgroundTint="@color/red"
        android:text="See other players who have scanned this code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />


    <ImageButton
        android:id="@+id/location_button"
        android:layout_width="114dp"
        android:layout_height="52dp"
        android:background="@drawable/big_rounded_button"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_maps"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />


    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="632dp"
        android:background="@drawable/gray_button"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_delete"
        android:text="@string/login"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="TextView" />
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/imageBox1"
        android:layout_width="389dp"
        android:layout_height="34dp"
        android:contentDescription="@string/username_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.736"
        app:srcCompat="@drawable/big_rounded_button"
        app:tint="#333333" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="389dp"
        android:layout_height="34dp"
        android:autofillHints=""
        android:hint="Add a comment..."
        android:textColor="#8A8A8E"
        android:textColorHint="#8A8A8E"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBox1"
        app:layout_constraintEnd_toEndOf="@+id/imageBox1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageBox1"
        app:layout_constraintTop_toTopOf="@+id/imageBox1"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>