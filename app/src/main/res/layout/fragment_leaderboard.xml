<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:foregroundTint="#333333"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/title_leaderboard"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center"

        android:layout_marginTop="32dp"
        app:cardCornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_notifications">

        <ImageView
            android:id="@+id/limage1"
            android:layout_width="85dp"
            android:layout_height="85dp"

            android:contentDescription="@string/image"
            android:src="@drawable/ic_profile"

            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="1000dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_notifications">

        <ImageView
            android:id="@+id/limage2"
            android:layout_width="85dp"
            android:layout_height="85dp"

            android:contentDescription="@string/image"
            android:src="@drawable/ic_profile"

            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/player2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/username"
        android:textAlignment="center"
        android:textColor="#EFEFEF"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center"

        android:layout_marginTop="50dp"
        app:cardCornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/text_notifications">

        <ImageView
            android:id="@+id/limage3"
            android:layout_width="85dp"
            android:layout_height="85dp"

            android:contentDescription="@string/image"
            android:src="@drawable/ic_profile"

            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/player1_score"
        android:layout_width="75dp"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:text="@string/_1000"
        android:textAlignment="center"
        android:textColor="#00F244"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <TextView
        android:id="@+id/player2_score"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="2dp"
        android:text="@string/_1000"
        android:textAlignment="center"
        android:textColor="#00F244"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <TextView
        android:id="@+id/player3_score"
        android:layout_width="69dp"
        android:layout_height="23dp"
        android:layout_marginTop="2dp"
        android:text="@string/_1000"
        android:textAlignment="center"
        android:textColor="#00F244"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/player3" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/username"
        android:textAlignment="center"
        android:textColor="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/username"
        android:textAlignment="center"
        android:textColor="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <ListView
        android:id="@+id/playerList"
        android:layout_width="375dp"
        android:layout_height="230dp"
        android:layout_marginTop="167dp"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <Button
        android:id="@+id/button"
        android:layout_width="380dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <RadioGroup
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:checkedButton="@+id/score_button"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/text_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button">

        <RadioButton
            android:id="@+id/score_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Score"
            android:textColor="@color/white">
        </RadioButton>

        <RadioButton
            android:id="@+id/qrCode_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="QR Code"
            android:textColor="@color/white">
        </RadioButton>

    </RadioGroup>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="375dp"
        android:layout_height="73dp"
        android:layout_marginBottom="32dp"
        android:background="#333333"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerList" />

    <TextView
        android:id="@+id/your_ranking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Your Ranking:"
        android:textColor="#FF426F"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <TextView
        android:id="@+id/user_rank"
        android:layout_width="41dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="#1"
        android:textColor="@color/yellow"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="37dp"
        android:layout_height="37dp"

        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="1000dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toStartOf="@+id/current_username"
        app:layout_constraintStart_toEndOf="@+id/user_rank"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar">

        <ImageView
            android:id="@+id/users_image"
            android:layout_width="37dp"
            android:layout_height="37dp"

            android:contentDescription="@string/image"
            android:src="@drawable/ic_profile"

            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/current_username"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <TextView
        android:id="@+id/current_user_score"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:gravity="right"
        android:text="TextView"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <TextView
        android:id="@+id/percentile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="You are in the top x% of players"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>

